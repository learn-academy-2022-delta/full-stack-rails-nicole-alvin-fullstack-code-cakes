<h3>Create a new Blog Post </h3>

<%= form_with model: @blog do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <br/>
    <%= form.label :content %>
    <%= form.text_area :content %>
    <br/>
    <%= form.submit %>
<% end %>

<br/>

<p>
    Back to <%= link_to 'Blog Posts', blogs_path %>
</p>